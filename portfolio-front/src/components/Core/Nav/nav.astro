---
import './nav.css';
---

<header class="flex h-16 md:h-32 p-6 md:p-14 justify-between">
  <a href="/" class="nav-logo_link relative z-10">
    <h1 class="text-base font-medium">
      Juan Vargas
    </h1>
  </a>

  <nav>
    <ul class="shadow-md">
      <li id="/" class="text-sm md:text-base font-base">
        <a href="/">Home</a>
      </li>
      <li id="/about/" class="text-sm md:text-base font-base">
        <a href="/about/">About</a>
      </li>
      <li id="/work/" class="text-sm md:text-base font-base">
        <a href="/work/">Work</a>
      </li>
      <li id="/contact/" class="text-sm md:text-base font-base">
        <a href="/contact/">Contact</a>
      </li>
    </ul>
  </nav>

  <ul class="nav-social z-10 gap-4">
    <li>
      <a href="mailto:vargasm.jp@gmail.com" target="_blank">
        <img src="/svg/email.svg" alt="email icon" />
      </a>
    </li>
    <li>
      <a href="https://drive.google.com/file/d/1gdPGUCfF5k_vEiy5hesaeY7hH0m-CAjo/view?usp=sharing" target="_blank">
        <img src="/svg/cv.svg" alt="cv icon" />
      </a>
    </li>
    <li>
      <a href="https://twitter.com/jpvargasdev" target="_blank">
        <img src="/svg/twitter.svg" alt="twitter icon" />
      </a>
    </li>
    <li>
      <a href="https://github.com/jpvargasdev" target="_blank">
        <img src="/svg/github.svg" alt="github icon" />
      </a>
    </li>
  </ul>
</header>

<script>
  const url = new URL(document.URL);
  const el = document.getElementById(url.pathname);
  if (el) {
    el.classList.add('nav-item_selected');
    const anchorEl = el.getElementsByTagName('a');
    if (anchorEl) {
      anchorEl[0].classList.add('nav-item_text');
    }
  }
</script>
